{
  "name": "@mycelium-now/core",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Mycelium",
  "main": "dist/index.js",
  "module": "dist/core.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/web.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/web.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.5.2",
    "@types/ws": "^8.5.3",
    "dts-cli": "^1.5.1",
    "husky": "^8.0.1",
    "size-limit": "^7.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "ws": "^8.8.0"
  },
  "dependencies": {
    "reconnecting-websocket": "^4.4.0",
    "wait-for-expect": "^3.0.2"
  }
}
